{
  "id": "playbook",
  "label": "Playbook",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": " 50 characters max."
        }
      },
      "creator": {
        "type": "Link",
        "config": {
          "label": "Creator",
          "select": "document",
          "customtypes": ["creator"]
        }
      },
      "destination": {
        "type": "Link",
        "config": {
          "label": "Destination",
          "select": "document",
          "customtypes": ["destination"]
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": [
            {
              "name": "mobile",
              "width": 1200,
              "height": 900
            },
            {
              "name": "thumb",
              "width": 960,
              "height": 960
            }
          ]
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "audio": {
        "type": "Link",
        "config": {
          "label": "Audio",
          "placeholder": "MP3 file URL",
          "allowTargetBlank": false,
          "select": null
        }
      },
      "story": {
        "type": "Link",
        "config": {
          "label": "Story",
          "placeholder": "Medium link",
          "allowTargetBlank": false,
          "select": null
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "gem": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
