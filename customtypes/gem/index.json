      "playbooks": {
        "type": "Group",
        "config": {
          "label": "Playbooks",
          "fields": {
            "playbook": {
              "type": "Link",
              "config": {
                "label": "Playbook",
                "select": "document",
                "customtypes": ["playbook"]
