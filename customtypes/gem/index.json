{
  "id": "gem",
  "label": "Gem",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "",
          "options": [
            "Food & Drink",
            "Nature",
            "Retail",
            "Culture",
            "Events",
            "Wellness",
            "Accommodation",
            "Neighbourhoods"
          ],
          "default_value": "Food & Drink"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          },
          "thumbnails": [
            {
              "name": "mobile",
              "width": 1200,
              "height": 900
            },
            {
              "name": "thumb",
              "width": 900,
              "height": 1200
            },
            {
              "name": "seo",
              "width": 1200,
              "height": 630
            }
          ]
        }
      },
      "photo_credit": {
        "type": "Text",
        "config": {
          "label": "Photo Credit",
          "placeholder": "Photographer name"
        }
      },
      "destination": {
        "type": "Link",
        "config": {
          "label": "Destination",
          "select": "document",
          "customtypes": ["destination"]
        }
      },
      "address": {
        "type": "Text",
        "config": {
          "label": "Address",
          "placeholder": ""
        }
      },
      "google_maps_id": {
        "type": "Text",
        "config": {
          "label": "Google Maps ID",
          "placeholder": "Place ID"
        }
      },
      "location": {
        "type": "GeoPoint",
        "config": {
          "label": "Location"
        }
      },
      "description": {
        "type": "Text",
        "config": {
          "label": "Description",
          "placeholder": "Max. 3 words"
        }
      },
      "about": {
        "type": "StructuredText",
        "config": {
          "label": "About",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "website": {
        "type": "Link",
        "config": {
          "label": "Website",
          "placeholder": "",
          "allowTargetBlank": false,
          "select": null
